<!DOCTYPE html>
<html>
<head>
  <title>Freedom</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if user_signed_in? %>
    <ul>
      <li><%= link_to('Account', account_path) %></li>
      <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
    </ul>
  <% end %>

<%= yield %>

</body>
</html>
